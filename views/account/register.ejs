<h1>
    <%= title %>
</h1>
<%- messages() %>

<p>ALL FIELDS ARE REQUIRED</p>
<div class="form-container">
    <form action="/account/register" method="post">
        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required>

        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required>
        
        <label for="account_email">Email</label>
        <input type="email" id="account_email" name="account_email" required placeholder="Enter a valid email address">

        <label for="account_password">Password</label>
        <input type="password" id="account_password" name="account_password" required pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9]).{12,}$"
        title="Password must be at least 12 characters long, contain at least one uppercase letter, one number, and one special character.">

        <p>Passwords must be minimun of 12 characters and include 1 capital letter, 1 numbers and 1 special character</p>

        <span id="pswdBtn">Show Password</span>

        <button type="submit">Register</button>
    </form>

    <p>No account? <a href="/account/register">Sign-up</a></p>
</div>

<script src="/js/register.js" defer></script>