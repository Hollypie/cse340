<h1>
    <%= title %>
</h1>
<%- messages() %>
<p>ALL FIELDS ARE REQUIRED</p>
<div class="form-container">
    <form action="/account/login" method="post">
        <label for="account_email">Email</label>
        <input type="email" id="account_email" name="account_email" required placeholder="Your email">
    
        <label for="account_password">Password</label>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special
            character</span><br><br>
        <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" placeholder="Your Password">
    
        <button type="submit">Login</button>
    </form>
    
    <p>No account? <a href="/account/register">Sign-up</a></p>
</div>